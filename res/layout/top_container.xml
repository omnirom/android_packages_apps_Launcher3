<com.android.launcher3.topwidget.TopWidgetView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/top_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/top_widget_padding"
        android:paddingRight="@dimen/top_widget_padding" >

        <LinearLayout
            android:id="@+id/calendar_view_container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center" />

        <LinearLayout
            android:id="@+id/current_weather_view_container"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/detailed_weather_view_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:visibility="gone"
        android:paddingLeft="@dimen/top_widget_padding"
        android:paddingRight="@dimen/top_widget_padding" />

</com.android.launcher3.topwidget.TopWidgetView>
