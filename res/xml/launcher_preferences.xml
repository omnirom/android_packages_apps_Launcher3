<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <Preference
        android:key="home_settings"
        android:title="@string/home_category_title"
        android:layout="@layout/homescreen_layout">
        <intent
            android:action="android.settings.APPLICATION_DETAILS_SETTINGS"
            android:targetPackage="com.google.android.apps.nexuslauncher"
            android:targetClass="com.google.android.apps.nexuslauncher.HomeScreenActivity" />
    </Preference>

    <Preference
        android:key="app_drawer"
        android:title="@string/app_drawer_category_title"
        android:layout="@layout/appdrawer_layout">
        <intent
            android:action="android.settings.APPLICATION_DETAILS_SETTINGS"
            android:targetPackage="com.google.android.apps.nexuslauncher"
            android:targetClass="com.google.android.apps.nexuslauncher.AppDrawerActivity" />
    </Preference>

    <Preference
        android:key="icons"
        android:title="@string/icon_category_title"
        android:layout="@layout/icons_layout">
        <intent
            android:action="android.settings.APPLICATION_DETAILS_SETTINGS"
            android:targetPackage="com.google.android.apps.nexuslauncher"
            android:targetClass="com.google.android.apps.nexuslauncher.IconsActivity" />
    </Preference>

    <Preference
        android:key="other"
        android:title="@string/other_category_title"
        android:summary="@string/other_category_summary"
        android:layout="@layout/other_layout">
        <intent
            android:action="android.settings.APPLICATION_DETAILS_SETTINGS"
            android:targetPackage="com.google.android.apps.nexuslauncher"
            android:targetClass="com.google.android.apps.nexuslauncher.OtherActivity" />
    </Preference>

</PreferenceScreen>
