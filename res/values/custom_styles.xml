<resources>


    <!-- Launcher Settings -->
    <style name="LauncherTheme" parent="@android:style/Theme.Material.Light.DarkActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:colorAccent">@color/accent</item>
    </style>

    <style name="NumberPickerInputText">
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="android:textColorHighlightInverse">@android:color/transparent</item>
        <item name="android:textColorHighlight">@android:color/transparent</item>
        <item name="android:textColorHint">@android:color/transparent</item>
        <item name="android:textColorLink">@android:color/transparent</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>

